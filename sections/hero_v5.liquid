{%- style -%}

.section-{{section.id}}-padding {
    padding-top: {{section.settings.padding_top | times: 0.75 | round: 0}}px;
    padding-bottom: {{section.settings.padding_bottom | times: 0.75 | round: 0}}px;
}
.secion_3_wrapper h3{
    color:white;
}
.section_3_img_1 {
    background-image: url({{section.settings.bg_image | img_url: 'master' }});
    background-position: center;
    background-size: cover;
}
.section_3_img_2 {
    background-image: url({{section.settings.bg_image_2 | img_url: 'master' }});
    background-position: center;
    background-size: cover;
}
.section_3_img_3 {
    background-image: url({{section.settings.bg_image_3 | img_url: 'master' }});
    background-position: center;
    background-size: cover;
}
.section_3_img_4 {
    background-image: url({{section.settings.bg_image_4 | img_url: 'master' }});
    background-position: center;
    background-size: cover;
}
.secion_3_wrapper h3{
    font-family:primary;
}




@media screen and(min-width: 750px) {
    .section-{{section.id}}-padding {
        padding-top: {{section.settings.padding_top}}px;
        padding-bottom: {{section.settings.padding_bottom}}px;
    }
}

{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
    <div class="section_3_uperside">
        <div class="secion_3_wrapper">
          <h3>{{section.settings.title}}</h3>
          <div class="section_3_uperside_imgcontainer pure-g">
            <div class="section_3_img_1 pure-u-1 pure-u-md-5-24">
              <h5>{{section.settings.h5_1}}</h5>
              <h4>{{section.settings.h4_1}}</h4>
            </div>
            <div class="section_3_img_2 pure-u-1 pure-u-md-5-24">
                <h5>{{section.settings.h5_2}}</h5>
                <h4>{{section.settings.h4_2}}</h4>
            </div>
            <div class="section_3_img_3 pure-u-1 pure-u-md-5-24">
                <h5>{{section.settings.h5_3}}</h5>
                <h4>{{section.settings.h4_3}}</h4>
            </div>
            <div class="section_3_img_4 pure-u-1 pure-u-md-5-24">
                <h5>{{section.settings.h5_4}}</h5>
                <h4>{{section.settings.h4_4}}</h4>
            </div>
          </div>
        </div>
      </div>
</div>

