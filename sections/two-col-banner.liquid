


{%- style -%}
.section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
  padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
}


<!-- .section-2 {
  
    background-image: url({{section.settings.bg_image |  img_url: 'master' }});
    background-size: cover;
    padding: 240px 0px;
    background-position: center; 
  } -->

  .sec3.img1 {
    background-image: url({{section.settings.bg_image  | img_url: 'master' }});
  }
  .sec3.img2 {
    background-image: url({{section.settings.bg_image2  | img_url: 'master' }});
  }

@media screen and (min-width: 750px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
}
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
    
    <!-- section-3 start -->
    <div class="section-3">
        <div class="pure-g wrapper">
          <div class="pure-u-1 pure-u-md-12-24">
            <div class="sec3 img1">
              <!-- background image -->
              <div class="card-body">
                <h3>{{section.settings.heading3}} </h3>
                <a href=""> ver colección   </a>
              </div>
            </div>
          </div>
          <div class="pure-u-1 pure-u-md-12-24">
            <div class="sec3 img2">
              <!-- background image -->
              <div class="card-body">
                <h3>{{section.settings.heading2}} </h3>
                <button>ver colección</button>
              </div>
            </div>
          </div>
        </div>
      </div>



  
</div>

{% schema %}
{
"name": "two-col-banner",
"settings": [
  {
    "type": "text",
    "label": "Title",
    "id": "heading3"
  },
  {
    "type": "text",
    "label": "Title",
    "id": "heading2"
  },
  

  {
    "type": "image_picker",
    "label": "Background Image",
    "id": "bg_image"
  },

  {
    "type": "image_picker",
    "label": "Background Image",
    "id": "bg_image2"
  },

  {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 36
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 36
  }
],
"presets": [
  {
    "name": "two-col-banner"
  }
]
}


{% endschema %}
