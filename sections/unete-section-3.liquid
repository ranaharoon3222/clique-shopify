<div class="section-{{ section.id }}-padding">
    
    <div class="tahir-section-2">
        <div class="container">
          <div class="pure-g">
            <div class="pure-u-1 pure-u-md-12-24">
              <h4 class="H4" style="color: #151515;"> {{section.settings.h4_heading}} </h4>
            </div>
          </div>
          <div class="pure-g">
            <div class="pure-u-1 pure-u-md-12-24">
              <p class="body-1"> {{section.settings.p_heading}} </p>
            </div>
          </div>
        </div>
      </div>



  
</div>

{% schema %}
{
"name": "unete-section-3",
"settings": [
  {
    "type": "text",
    "label": "Title",
    "id": "h4_heading"
  },
  {
    "type": "text",
    "label": "Title",
    "id": "p_heading"
  },
  

  

  {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 36
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 36
  }
],
"presets": [
  {
    "name": "unete-section-3"
  }
]
}


{% endschema %}
