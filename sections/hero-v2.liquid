

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

#section_1_bgimg {
    background-image: url({{section.settings.bg_image | img_url : 'master'}});
    background-repeat: no-repeat;
    background-size: cover;
}



#container {
    width: 100%;
}

.wrapper {


    max-width: 1280px;
    width: 90%;
    margin: auto;
    display: flex;
}

.uper_bar {
    width: 100%;
    /* height: 5vh; */
    display: flex;
}

.top_bar {
    background: #EA2E34;

}

.uper_bar {
    padding: 6px 0;
}

.uper_bar .pure-u-1 p {
    text-align: center;
    color: white;
    margin: auto 0;
    flex-grow: 1;
}

.top_bar_p2 {
    text-align: right !important;
    margin: auto 0;
}

.uper_bar .icon {
    flex-grow: 1;
    margin: auto 0;
}

/* @media all and (nim-width :768px){
    .top_bar .icon{
        text-align: center;
        
    }
} */
.bgimg {
    padding: 10px 0;
}



#section_1_bgimg {
    display: flex;
    justify-content: center;
    align-items: center;
    color: azure;
    text-align: center;
}

#section_1_bgimg h2 {
    padding-top: 200px;
    padding-bottom: 200px;
    font-size: 40px;
    font-weight: 400;
}

.section_1_end {
    background-color: black;
    padding: 80px 20px;

}

.section_1_end_text p {
    color: aliceblue;
    text-align: center;

    padding-bottom: 24px;
    width: 90%;
    margin: auto;
}

.section_1_end_text h3 {
    color: EA2E34;
    text-align: center;
    font-size: 32px;
    font-weight: 400;

}


  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
 
<div class="section_1">
    <div id="section_1_bgimg">
      <h2>{{ section.settings.title }}  </h2>
    </div>
  </div>

    
</div>

{% schema %}
{
  "name": "Hero V2",
  "settings": [
    {
      "type": "text",
      "label": "Title",
      "id": "title"
    },

    {
      "type": "image_picker",
      "label": "Background Image",
      "id": "bg_image"
    },

    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Hero V2"
    }
  ]
}


{% endschema %}
