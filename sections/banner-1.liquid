                <p>
                    {{section.settings.paragraph}}
                </p>
                
                <p>
                    {{section.settings.paragraph2}}
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>



  
</div>

{% schema %}
{
"name": "banner-1",
"settings": [
  {
    "type": "image_picker",
    "label": "Title",
    "id": "image1"
  },
  {
    "type": "text",
    "label": "Title",
    "id": "heading2"
  },
  

  {
    "type": "text",
    "label": "Title",
    "id": "paragraph"
  },
  
  {
    "type": "text",
    "label": "Title2",
    "id": "paragraph2"
  },

  {
    "type": "range",
    "id": "padding_top",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_top",
    "default": 36
  },
  {
    "type": "range",
    "id": "padding_bottom",
    "min": 0,
    "max": 100,
    "step": 4,
    "unit": "px",
    "label": "t:sections.all.padding.padding_bottom",
    "default": 36
  }
],
"presets": [
  {
    "name": "banner-1"
  }
]
}


{% endschema %}
