{%- style -%}

.section-{{section.id}}-padding {
    padding-top: {{section.settings.padding_top | times: 0.75 | round: 0}}px;
    padding-bottom: {{section.settings.padding_bottom | times: 0.75 | round: 0}}px;
}

.section_1_end_text p {
    font-family: lato;
    color: aliceblue;
    text-align: center;
    padding-bottom: 24px;
    width: 90%;
    margin: auto;
}

.section_1_end_text h3 {

    font-family:primary;
    color: #EA2E34;
    text-align: center;
    font-size: 32px;

}

@media screen and(min-width: 750px) {
    .section-{{section.id}}-padding {
        padding-top: {{section.settings.padding_top}}px;
        padding-bottom: {{section.settings.padding_bottom}}px;
    }
}

{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
    <div class="section_1_end">
        <div class="section_1_end_text">
            <p>
                {{ section.settings.title }}
            </p>
            <h3>{{ section.settings.txt }}</h3>
        </div>
    </div>
</div>

{% schema %}

{
    "name": "Hero V3",
    "settings": [
        {
            "type": "text",
            "label": "Title",
            "id": "title"
        }, {
            "type": "text",
            "label": "txt",
            "id": "txt"
        }, {
            "type": "range",
            "id": "padding_top",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_top",
            "default": 36
        }, {
            "type": "range",
            "id": "padding_bottom",
            "min": 0,
            "max": 100,
            "step": 4,
            "unit": "px",
            "label": "t:sections.all.padding.padding_bottom",
            "default": 36
        }
    ],
    "presets": [
        {
            "name": "Hero V3"
        }
    ]
}

{% endschema %}
