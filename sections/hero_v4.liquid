{%- style -%}

.section-{{section.id}}-padding {
    padding-top: {{section.settings.padding_top | times: 0.75 | round: 0}}px;
    padding-bottom: {{section.settings.padding_bottom | times: 0.75 | round: 0}}px;
}
.section_2_body_row_1_card h3{
    font-family:primary;
}
.section_2_body_row_1_card p{
    font-family:lato;
}
.section_2_body h2{
    font-family:primary;
}

@media screen and(min-width: 750px) {
    .section-{{section.id}}-padding {
        padding-top: {{section.settings.padding_top}}px;
        padding-bottom: {{section.settings.padding_bottom}}px;
    }
}

{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
    <div class="section_2_body">
        <h2 class="h2">{{section.settings.title}}</h2>
        <div class="section_2_wrapper_body">
          <div class="section_2_body_row_1 pure-g">
            <div class="section_2_body_row_1_card pure-u-1 pure-u-md-8-24">
              <h3 class="h3">{{section.settings.h1}}</h3>
              <p  class="body1">{{section.settings.h1txt}}</p>
            </div>
            <div class="section_2_body_row_1_card pure-u-1 pure-u-md-8-24">
              <h3  class="h3">{{section.settings.h2}}</h3>
              <p class="body1">{{section.settings.h2txt}}</p>
            </div>
            <div class="section_2_body_row_1_card pure-u-1 pure-u-md-8-24">
              <h3 class="h3">{{section.settings.h3}}</h3>
              <p class="body1">{{section.settings.h3txt}}</p>
            </div>
          </div>
        </div>
        <div class="section_2_wrapper_body">
          <div class="section_2_body_row_1 pure-g">
            <div class="section_2_body_row_1_card pure-u-1 pure-u-md-8-24">
              <h3 class="h3">{{section.settings.h4}}</h3>
              <p class="pp body1">{{section.settings.h4txt}}</p>
            </div>
            <div class="section_2_body_row_1_card pure-u-1 pure-u-md-8-24">
              <h3 class="h3">{{section.settings.h5}}</h3>
              <p class="pp body1">{{section.settings.h5txt}}</p>
            </div>
            <div class="section_2_body_row_1_card pure-u-1 pure-u-md-8-24">
              <h3 class="h3">{{section.settings.h6}}</h3>
              <p class="pp body1">{{section.settings.h6txt}}.</p>
            </div>
          </div>
        </div>
      </div>
</div>

